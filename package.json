{
  "name": "black-twitch",
  "version": "1.1.0",
  "private": true,
  "description": "App sencilla en Electron para ver Twitch en escritorio.",
  "main": "src/main.js",
  "author": "matiasdante",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.matiasdante.black-twitch",
    "productName": "BlackTwitch",
    "directories": {
      "output": "build"
    },
    "icon": "resources/twitch-black.png",
    "files": [
      "src/**",
      "resources/**",
      "extensions/**",
      "package.json"
    ],
    "asarUnpack": [
      "extensions/**",
      "resources/extensions.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${os}-${arch}-setup.${ext}"
    }
  }
}
